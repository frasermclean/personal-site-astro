---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="404 – Page not found" description="The page you are looking for doesn’t exist.">
  <section class="card-surface p-8 text-center space-y-4">
    <h1 class="text-4xl font-bold text-[color:var(--color-text-primary)]">404</h1>
    <p class="text-lg text-[color:var(--color-text-secondary)]">
      The page you are looking for doesn’t exist or has moved.
    </p>
    <div class="mt-4 flex items-center justify-center gap-3">
      <a href="/" class="sw-btn">Go to Home</a>
      <a href="/blog/" class="sw-btn">Read the Blog</a>
    </div>
  </section>
</BaseLayout>
