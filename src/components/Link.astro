---
interface Props {
  href: string;
  title?: string;
  target?: '_blank' | '_self' | '_parent' | '_top';
  rel?: string;
}

const { href, title, target, rel } = Astro.props;
---

<a
  href={href}
  title={title}
  target={target}
  rel={rel}
  class="underline hover:text-teal-400"
>
  <slot />
</a>
