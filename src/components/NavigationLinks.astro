---
import HomeIcon from '../assets/icons/home.svg';
import MailIcon from '../assets/icons/mail.svg';
import UserIcon from '../assets/icons/user.svg';

const links = [
  {
    name: 'Home',
    url: '/',
    icon: HomeIcon,
  },
  {
    name: 'About',
    url: '/about',
    icon: UserIcon,
  },
  {
    name: 'Contact',
    url: '/contact',
    icon: MailIcon,
  },
];
---

<nav>
  <ul class="flex gap-4">
    {
      links.map((link) => (
        <li>
          <a
            title={link.name}
            href={link.url}
            class:list={[
              'flex gap-2 hover:text-teal-400',
              {
                'font-semibold': Astro.url.pathname === link.url,
              },
            ]}
          >
            <link.icon stroke-width="1" />
            <span class="hidden sm:block">{link.name}</span>
          </a>
        </li>
      ))
    }
  </ul>
</nav>
